<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    >


        <TextView
            android:id="@+id/task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/task_title"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_layout_bottom"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="100dp"
            android:paddingBottom="3dp"/>


    <ImageButton
        android:id="@+id/task_more"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/task_more_button_selector"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />

    <ImageButton
        android:id="@+id/task_update"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/task_update_button_selector"
        android:layout_toLeftOf="@id/task_more"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"/>

</RelativeLayout>